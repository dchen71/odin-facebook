<% provide(:title, "Friend Requests") %>

<h1 class="text-center">Friend Requests</h1>

<div class="row">
	<div class="col-md-offset-3 col-md-7">
	<h3>Remaining Requests(<%= @invites.count%>)</h3>
	<hr>
	<% @invites.each do |invitee| %>
		<div class="user">
			<%= gravatar_for invitee.email %>
			<%= link_to invitee.name, user_path(invitee.id) %>
			<%= link_to "Add Friend", '#', class: 'btn btn-primary pull-right' %>
		</div>
	<% end %>
	<%= will_paginate %>
	</div>
</div>
